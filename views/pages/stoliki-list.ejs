    <%- include('../fragments/header.ejs') %>

    <main>
        <h2>Stoliki</h2>
        
        <table class="table-list">
            <thead>
                <tr>
                    <th>Numer stolika</th>
                    <th>Max. liczba osób</th>
                    <th>Na zewnątrz</th>
					<th>Akcje</th>

                </tr>

                
            </thead>


            <tbody>
                <% for (let table of tables) { %>
                    <tr>
                        <td><%= table._id %></td>
                        <td><%= table.maxGuests %></td>
                        <td><%= table.outside %></td>
                        <td class="table-list">
                    
                            <ul class="list-actions">
                                <li><a href="/tables/details/<%=table._id%>" class="list-actions-button-details list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/tables/edit/<%=table._id%>" class="list-actions-button-edit list-actions-button-details">Edytuj</a></li>
                                <li><a href="/tables/delete/<%=table._id%>" class="list-actions-button-delete list-actions-button-details">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
     
    </tbody>
                     </table>

        <p><a href="tables/add" class="button-add"> Dodaj stolik </a></p>

    </main>


    
    <%- include('../fragments/footer.ejs') %>